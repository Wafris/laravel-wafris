{
    "name": "wafris/laravel-wafris",
    "description": "Wafris for Laravel",
    "keywords": [
        "Wafris",
        "laravel",
        "laravel-wafris"
    ],
    "homepage": "https://github.com/wafris/laravel-wafris",
    "license": "MIT",
    "authors": [
        {
            "name": "Wafris",
            "email": "me@codemonkey.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "predis/predis": "^2.2",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.8",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Wafris\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wafris\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-wafris --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare"
        ],
        "test": "phpunit",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wafris\\WafrisServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
